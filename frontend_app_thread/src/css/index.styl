@import "~tracim_frontend_lib/src/css/Variable.styl"

.thread
  .comment
    &.received
      .comment__header__text
        padding-left calc(5% + 4px)
        padding-right 0
    &.sent
      .comment__header__text
        padding-right calc(5% + 4px)
        padding-left 0
  &__header
    &__editionmode
      display none
  .timeline
    margin 0
  .thread
    &__contentpage
      width 100%
      &__top
        display flex
        justify-content flex-end
        padding standardSpacing pageSpacing 0
      &__messagelist
        padding-left pageSpacing
        padding-right pageSpacing
      &__content
        width 100%
      &__texteditor
        margin 0 pageSpacing pageSpacing
      &__header
        & .favoriteButton .iconbutton__icon
          margin-inline-end standardSpacing
        & .wsContentGeneric__header__actions .fa-fw
          margin 0

@media (min-width: min-sm) and (max-width: max-lg)
  .thread
    .thread__contentpage__content
      height calc(100% - 145px)
