
@import "~tracim_frontend_lib/src/css/Variable.styl"

.thread
  .comment
    &.received
      .comment__header__text
        padding-left calc(5% + 4px)
        padding-right 0
    &.sent
      .comment__header__text
        padding-right calc(5% + 4px)
        padding-left 0
  &__header
    &__editionmode
      display none
    &__icon
      .fa-comments
        color white
  .timeline
    margin 0
    width 100%
  .thread
    &__contentpage
      width 100%
      &__content
        width 100%
        height calc(100% - 175px)
      &__texteditor
        flex 0 0 auto

@media (min-width: min-sm) and (max-width: max-lg)
  .thread
    .thread__contentpage__content
      height calc(100% - 110px)
