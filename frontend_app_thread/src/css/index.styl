@import "~tracim_frontend_lib/src/css/Variable.styl"

.thread
  .comment
    &.received
      .comment__header__text
        padding-left calc(5% + 4px)
        padding-right 0
    &.sent
      .comment__header__text
        padding-right calc(5% + 4px)
        padding-left 0
  &__header
    &__editionmode
      display none
    &__icon
      .fa-comments-o
        color white
  .selectStatus
    margin-right 15px
  .timeline
    margin 0
    width 100%
  .thread
    &__contentpage
      width 100%
      &__content
        width 100%
      &__texteditor
        flex 0 0 auto

@media (max-width: max-xs)
  .thread
    &__contentpage__content
      height calc(100% - 185px) // wsContentGeneric:top wsContentGeneric__header:height - wsContentGeneric__option:height
