@import "../../node_modules/tracim_frontend_lib/src/css/Variable.styl"

.formBlock
  margin-bottom 15px
  border-radius 10px
  background-color offWhite
  &__title
    padding 10px 0 25px 10px
    border-bottom 1px solid grey
    font-size 20px
    font-weight 400
  &__field
    padding 10px
  &__bottom
    padding 10px

.folder_advanced
  width 1000px
  height 100%
  overflow-y auto
  overflow-x hidden
  &-content
    width 1000px
    padding 10px 10px 0 10px
  &__content
    &__state
      display flex
      align-items center
      justify-content space-between
      margin-bottom 15px
      padding 5px 15px
      background-color #fee498
      border-radius 10px
      &__msg > i
        margin-right 8px
      &__btnrestore
        cursor pointer
        & > i
          margin-right 8px
    &__form
      padding 10px 0
      &__type
        display flex
        align-items center
        padding 3px 13px
        cursor pointer
        font-size 16px
        &:hover
          background-color lightGrey
        &__icon
          margin 0 5px 0 0

.folder
  &__contentpage
    &__content
      width 100%

.newUpload
  &__email
    margin-top 10px
    padding 5px 0px
    display flex
    &__icon
      background-color transparent
      border none
      &:focus
        box-shadow 0 0 0 0
        border 0 none
        outline 0
  &__password
    padding 5px 0px
    display flex
    &__wrapper
      display flex
      flex-grow 2
      border-width 1px
      border-style solid
      border-radius .25rem
      border-color lightgray
      background-color white
      padding-left 5px
      & > i
        margin auto
    &__input
      border none
      padding-left 0
    &__icon
      background-color transparent
      border none
      &:focus
        box-shadow 0 0 0 0
        border 0 none
        outline 0
