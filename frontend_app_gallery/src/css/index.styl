
// HACK EASY TO FIX : CUSTOM ARROWS
.slick-prev
  left 0
  z-index 20
  &::before
    color #F96332
    font-size 30px
.slick-next
  right 0
  z-index 20
  &::before
    font-size 30px
    color #F96332
.carousel__top .slick-current
  & img
    border 3px #7D4E24 solid



.carousel__item__preview
  &__content
    display: block
    text-align: center
    &__image
      margin 20px 0
      display flex
      min-height 500px
      & img
        object-fit contain
        cursor pointer
        margin auto
        box-shadow 0 4px 8px 0 rgba(0,0,0,0.4)

.thumbnail__item__preview__content
  display block
  height 150px
  cursor pointer
  text-align center
  &__image
    display flex
    align-items center
    height 150px
    width 150px
    margin 0 auto
    & img
      margin 0 auto
      box-shadow 0 4px 8px 0 rgba(0,0,0,0.4)
      &:hover
        box-shadow 0 8px 16px 0 rgba(0,0,0,0.6)

