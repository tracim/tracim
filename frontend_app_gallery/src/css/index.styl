.carousel
  &__thumbnail .slick-current
    & img
      border 3px #7D4E24 solid
  &__item__preview
    &__content
      display: block
      text-align: center
      &__image
        margin 20px 0
        display flex
        min-height 500px
        & img
          max-height 500px
          object-fit contain
          cursor pointer
          margin auto
          box-shadow 0 4px 8px 0 rgba(0,0,0,0.4)
  &__arrow
    display block
    position absolute
    cursor pointer
    height 100%
    width 5%
    top 0
    z-index 1
    & i
      transform translateY(-50%)
      transform translateX(-50%)
      position absolute
      top 50%
      left 50%
      font-size 40px
    &:hover
      background-color rgba(0, 0, 0, 0.1)
      border-radius 10px
    &__next
      right -20px
    &__prev
      left -20px

.thumbnail__item__preview__content
  display block
  height 150px
  cursor pointer
  text-align center
  margin 16px 0
  &__image
    display flex
    align-items center
    height 150px
    width 150px
    margin 0 auto
    & img
      margin 0 auto
      box-shadow 0 4px 8px 0 rgba(0,0,0,0.4)
      &:hover
        box-shadow 0 8px 16px 0 rgba(0,0,0,0.6)

.gallery
  &__action__button
    text-align center
    & button:hover
      background-color: rgba(0, 0, 0, 0.1)
    &__lightbox i
      color #fff
    &__rotation
      &__left i
        transform rotate(270deg)
      &__right i
        transform rotate(90deg)

.galleryPage
  height 100%
  overflow auto

.rotate90
  transform rotate(90deg)
.rotate180
  transform rotate(180deg)
.rotate270
  transform rotate(270deg)

.gallery__delete__file__popup
  & .cardPopup__container
    width 400px
  &__body
    width 100%
    &__btn
      display flex
      justify-content flex-end
      .btn:first-child
        margin-right 15px
