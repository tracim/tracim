@import "~tracim_frontend_lib/src/css/Variable.styl"

.loginpage
  display flex
  flex-direction row
  width 100%
  &__welcome
    width 70%
    max-height 100vh
    overflow auto
  &__main
    width 30%
    background-color lightGrey
    display flex
    flex-direction column
    &__wrapper
      display flex
      flex-direction column
      width 80%
      margin-block-start 40px
      margin-inline-start 40px
      margin-inline-end auto
    &__form
      width 100%
      margin-block-start 15%
      display flex
      flex-direction column
      &__forgot_password
        cursor pointer
        font-size smallTitle
      &__btnsubmit
        margin-inline-start auto
    &__header
      display flex
      &__title
        margin-inline-end auto
      &__createButton
        margin auto 0

    & > footer
      margin-inline-start auto
      margin-inline-end auto
      margin-block-start auto
      margin-block-end standardSpacing

@media (max-width: max-md)
  .loginpage
    flex-direction column-reverse
    &__welcome
      width 100%
      margin-block-end auto
    &__main
      width 100%
      &__wrapper
        margin standardSpacing auto
      &__form
        margin-block-start standardSpacing
