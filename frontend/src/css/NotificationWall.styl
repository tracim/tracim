.notification
  position fixed
  top headerHeight
  right 0
  width 40%
  height "calc(100% - %s)" % headerHeight
  background-color offWhite
  box-shadow shadow-right
  z-index 26
  display flex
  flex-direction column
  max-width 600px
  overflow hidden
  transition 0.5s
  & .iconbutton
    font-size metadataFontSize
  &__list
    flex-grow 2
    overflow auto
    &__item
      flex-direction row
      display flex
      color fontColor
      font-weight normal
      background-color lightBlueOpacity
      padding standardSpacing
      height 60px
      align-items center
      &__text
        flex 4
        display flex
        word-break break-word
        align-items center
        &__content
          line-height standardFontSize
          max-height 2*standardFontSize
          overflow hidden
          text-overflow ellipsis
        & .avatar
          margin-inline-end standardSpacing
        &__avatars
          width 30px // INFO - GB - 2021-08-26 - 30px is one author avatar's size
          margin-inline-end standardSpacing
          &__second
            position absolute
            top 20px
            left 20px // INFO - GB - 2021-08-26 - 20px is two authors avatar's size
        &__usersAvatar
          min-width 30px
          min-height 30px // INFO - GB - 2021-08-26 - 30px is one author avatar's size
          display flex
          border-radius 50%
          margin-inline-end standardSpacing
          align-items center
          justify-content center
          background-color lightDarkGrey
      &__meta
        padding-right textSpacing
        color lightDarkGrey
        flex 1
        overflow hidden
        font-size metadataFontSize
        white-space nowrap
        text-align right
        &__space
          text-overflow ellipsis
          overflow hidden
          font-weight bold
      &__circle
        &__wrapper
          margin 0
          min-width 1em
          text-align center
        font-size 8px
        transition 300ms font-size color
        color lightBlue
      &.itemRead
        color lightDarkGrey
        background-color offWhite
        opacity 0.8
      &.isMention:not(.itemRead)
        background lightOrange
      &.isMention.itemRead
        background lightOrangeOpacity
      &:hover
        color inherit
  &__wallClose
    height 0
    top 0
  &__footer
    border-top borderStyle
    padding standardSpacing
    position sticky
    bottom 0
    background-color offWhite
    justify-content center
    display flex
  &__header
    min-height headerHeight
    &__title
      font-weight normal

.contentTitle
  &__highlight
    font-weight bold
.documentTitle
  &__highlight
    font-weight bold

// INFO - MB - 20210204 - overrides ListItemWrapper styles because .content is used in many places
.notification > .notification__list > .content
  border none

@media (min-width: min-md) and (max-width: max-md)
  .notification
    width 50%

@media (max-width: max-sm)
  .notification
    width 100%

@media (max-width: max-lg)
  .notification .btn
    & > .genericButton__label
      display none
    & > .genericButton__icon
      margin 0px
