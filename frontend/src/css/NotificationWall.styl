@import "~tracim_frontend_lib/src/css/Variable.styl"

.notification
  position fixed
  top headerHeight
  right 0
  width 40%
  height "calc(100% - %s)" % headerHeight
  border 1px solid grey
  background-color offWhite
  box-shadow shadow-right
  z-index 26
  display flex
  flex-direction column
  &__header
    border-bottom 1px solid grey
    & div
      color fontColor
    &__close i
      color fontColor
  &__list
    flex-grow 2
    overflow auto
    &__item
      flex-direction row
      display flex
      color fontColor
      font-weight normal
      background-color #f6f6f6
      padding 5px
      min-height 50px
      align-items center
      &__icon
        font-size 23px
        margin-right 10px
      &__circle
        margin-left auto
        margin-right 5px
        font-size 8px
        color lightBlue
      &.itemRead
        color #595959
        background-color offWhite
        opacity 0.8
      &:hover
        background-color #E0E0E080
        color inherit
  &__footer
    border-top 1px solid grey
    padding 5px
    justify-content center
    width 100%
    display flex

@media (min-width: min-md) and (max-width: max-md)
  .notification
    width 50%
@media (max-width: max-sm)
  .notification
    width 100%
