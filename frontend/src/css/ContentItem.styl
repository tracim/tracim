@import '~tracim_frontend_lib/src/css/Variable.styl'

.content
  position relative
  &__item
    padding standardSpacing 0
  &__type
    padding 0 25px
    font-size 30px
    text-align center
  &__dragPreview
    display flex
    align-items center
    flex 1
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
  &__name
    padding 5px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    color fontColor
  &__status
    flex-grow 0
    width 180px
    padding 0 15px
    text-align center
    font-weight normal
    &__text
      margin-left 15px
    &__icon
      font-size mediumTitle
  & .dragHandle
    display none
  &:hover > .dragHandle
    display block

//MEDIAQUERIES

@media (min-width: max-xs) and (max-width: max-lg)
  .content
    &__name__icons
        margin-top 5px

@media (max-width: max-xs)
  .content
    &__header__status
      visibility hidden
    &__name__text
      width 200px
    &__status
      width 70px
      &__icon
        display flex
        justify-content flex-end
