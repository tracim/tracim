@import "~tracim_frontend_lib/src/css/Variable.styl"

.publications
  height 100%
  overflow auto
  &__reorder
    margin auto auto 10px
  &__publishArea
    & textarea
      width 100%
      &:focus
        outline-color #661F98
    &__buttons
      display flex
      margin-top 10px
      &__advancedEdition
        margin-inline-end auto
        font-size fontSizeSmall
  & .pageContentGeneric
    height unset
    display flex
    flex-direction column
