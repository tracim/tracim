.publications
  overflow auto
  height 100%
  > .ScrollToBottomContents
    display flex
    flex-direction column
    & > .tabBar
      margin-bottom pageSpacing
  &__showMoreButton
    margin-block-end standardSpacing
    margin-inline-start auto
    margin-inline-end auto
    margin-bottom standardSpacing
  &__empty
    margin 0 pageSpacing
  & .feedItem
    margin-block-end standardSpacing
  &__reorder
    margin auto auto standardSpacing
  .publishAreaContainer
    margin 0 pageSpacing
    padding-bottom pageSpacing
    & textarea
      border borderStyle
      border-radius standardBorderRadius
      padding textSpacing
      width 100%
      order 2
      &:focus
        outline-color publicationColor
    & .tox-container
      order 2
    & .autocomplete
      order 1


@media (max-width: max-xs)
  .publications
    > .ScrollToBottomContents > .tabBar
      margin-bottom standardSpacing
    .publishAreaContainer
      margin 0
      padding 0 standardSpacing standardSpacing
