@import "~tracim_frontend_lib/src/css/Variable.styl"

.publications
  overflow auto
  height 100%
  > .ScrollToBottomContents
    height 100%
    display flex
    flex-direction column
  &__empty
    font-weight bold
    margin-inline-start standardSpacing
    margin-top standardSpacing
  & .feedItem
    margin-block-start 15px
    margin-block-end 15px
  &__reorder
    margin auto auto standardSpacing
  &__publishArea
    display flex
    flex-direction column
    margin-top auto
    padding standardSpacing
    & textarea
      width 100%
      order 2
      &:focus
        outline-color #661F98
    & .mce-container
      order 2
    & .autocomplete
      order 1
    &__buttons
      display flex
      justify-content space-between
      margin-top standardSpacing
      order 3
      > :last-child
        margin-inline-start auto
      &__submit .iconbutton__icon
        margin-inline-end 8px
      &__left
        &__advancedEdition
          margin-inline-end auto
          font-size smallTitle
      &__right
        display flex
        & .AddFileToCommentButton
          padding 3px 6px

@media (max-width: max-xs)
  .publications
    &__publishArea__buttons__advancedEdition
      display none
    .pageContentGeneric
      padding 5px 0
