a
  color fontColor
  &:hover, &:link, &:visited
    color fontColor
    text-decoration none

.table td
  vertical-align middle

.tracim
  height 100%
  &__content
    min-height 100%
    width 100%

.outlineTextBtn
  padding 10px 15px
  background-color transparent
  cursor pointer
  &:disabled
    cursor not-allowed
  &:hover
    color offWhite
  &.nohover
    &:hover
      color inherit

.highlightBtn
  padding 10px 25px
  color offWhite
  cursor pointer
  &:disabled
    cursor not-allowed

.iconBtn
  border-color transparent
  background-color transparent
  margin 2px
  padding 5px
  cursor pointer
  &:disabled
    cursor not-allowed

div.mce-fullscreen
  z-index 1050
  &.mce-container
    top 88px

.sidebarpagecontainer
  display flex
  padding-top 88px
  min-height 100%

.pageWrapperGeneric
  width 100%
  &__header
    display flex
  &__content
    margin 10px 10px 120px 10px
@media (min-width: min-md) and (max-width: max-md)
  .pageWrapperGeneric
    display block
    &__header
      margin 95px 0 5px 30px
    &__content
      margin 0
@media (min-width: min-sm) and (max-width: max-sm)
  .pageWrapperGeneric
    display block
    &__header
      margin 95px 0 35px 0
      &__title
        display inline-block
        margin-left 0
    &__content
      margin 0
@media (max-width: max-xs)
  .pageWrapperGeneric
    display block
    &__header
      display block
      margin-top 60px
    &__content
      margin 0

.nopadding
  padding 0

.pageTitleGeneric
  margin 45px 0
  width 100%
  &__title
    margin-left 10px
    font-size 30px
    color darkGrey
@media (max-width: max-xs)
  .pageTitleGeneric
    display block


.pageContentGeneric
  margin 10px 30px 0 30px
  width 100%
  height 100%

.dropdownCreateBtn
  margin-left 10px
  &__label
    &__text
      display inline-block
      color white
    &::after //bootstrap override
      display inline-block
      margin-left 30px
      color white
  &__setting
    padding 0
    cursor pointer
    .setting__link
      padding 10px
      cursor pointer

.subTitle
  font-size 20px
  font-weight 500

.genericBtnInfoDashboard
  &__btn
    display flex
    margin-bottom 30px
    border-width 1px
    border-style solid
    border-radius 10px
    padding 10px 25px
    cursor pointer
    &:hover
      color offWhite
    &__icon
      margin-right 20px
      font-size 30px
  &__info
    border 1px solid grey
    border-radius 10px
    padding 15px 25px
    &__text
      margin-bottom 35px
    &__link
      display inline-block
      margin-bottom 15px
      border 1px solid grey
      border-radius 10px
      padding 15px

.notched // CÃ´me - 2018/09/27 - this class requires a border-color to be defined (eg. with primaryColorBorder)
  &::before
    content ''
    position absolute
    width 28px
    height 25px
    border-style solid
    top 0
    right 0
    border-width 6px 6px 0 0
    border-color inherit
  &::after
    content ''
    position absolute
    width 28px
    height 25px
    border-style solid
    bottom 0
    left 0
    border-width 0 0 6px 6px
    border-color inherit
