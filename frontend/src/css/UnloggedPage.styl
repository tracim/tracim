.resetpassword, .forgotpassword, .guestupload, .guestdownload
  display flex
  flex-direction column
  align-items center
  justify-content center
  height auto
  background-image url('/assets/branding/welcome-simple-bg.jpg')
  background-repeat no-repeat
  background-size cover
  background-position center
  background-color gray
  width 100%
  &__card
    background-color lightGrey
    z-index 1
    &__header
      text-align center

.resetpassword, .forgotpassword, .guestdownload
  &__card
    max-width 500px
    width 40%

// MEDIAQUERIES
@media (min-width: min-lg) and (max-width: max-lg)
  .resetpassword, .forgotpassword, .guestupload, .guestdownload
    &__card
      width 50%

@media (min-width: min-md) and (max-width: max-md)
  .resetpassword, .forgotpassword, .guestupload, .guestdownload
    &__card
      width 60%

@media (min-width: min-sm) and (max-width: max-sm)
  .resetpassword, .forgotpassword, .guestupload, .guestdownload
    &__card
      width 80%

@media (max-width: max-xs)
  .resetpassword, .forgotpassword, .guestupload, .guestdownload
    &__card
      width 95%
