.nomarginlabel
  margin-bottom 0

.table tr:nth-child(even) // @fixme CÃ´me - 2018/09/13 - refactor this rule, it should not impact the whole project
  background-color lightGrey2

.account
  &.pageContentGeneric
    height unset
  &__delimiter
    margin standardSpacing auto
  &__userpreference
    display flex
    padding-top standardSpacing
    &__setting
      border-radius standardBorderRadius
      padding standardSpacing
      width 80%
      min-height 500px
      background-color offWhite
      flex 1
      .spaceconfig
        &__table
          overflow auto
          &__role
            display flex
            align-items center
            &__icon
              margin-inline-end textSpacing
        &__sectiontitle
          display flex
          align-items center
          > .iconbutton
            font-size standardFontSize
            margin-inline-start auto
      & .agendaInfo__header
        font-weight normal
        font-size titleFontSize
        margin-top 0


@media (max-width: max-md)
  .account
    &__userpreference
      flex-direction column
      .menusubcomponent
        margin-inline-end 0
        margin-bottom standardSpacing
        width 100%
        min-height auto
      &__setting
        width 100%
