@import '~tracim_frontend_lib/src/css/Variable.styl'

.nomarginlabel
  margin-bottom 0

.table tr:nth-child(even) // @fixme CÃ´me - 2018/09/13 - refactor this rule, it should not impact the whole project
  background-color lightGrey

.account
  &__delimiter
    position relative
    top 3px
    margin auto
    z-index 3
  &__userpreference
    display flex
    padding 25px
    width 100%
    &__setting
      border-radius 10px
      padding 20px
      width 80%
      min-height 600px
      background-color offWhite
      .spaceconfig
        &__table
          border 1px solid lightGrey
          &__role
            display flex
            align-items center
            &__icon
              margin-right standardSpacing

// MEDIAQUERIES

@media (min-width: min-md) and (max-width: max-md)

  .account .pageContentGeneric
    min-height 100%

  .account
    &__userpreference
      display block
      padding 25px
      .menusubcomponent
        display flex
        flex-direction column
        align-items flex-start
        justify-content flex-start
        margin-bottom 50px
        width 100%
        min-height auto
        &__header
          display flex
          flex-direction row-reverse
          align-items center
          justify-content flex-end
          width 100%
      &__setting
        position relative
        width 100%

