sidebar-animate-speed = 0.5s
sidebarFontColor = offWhite
sidebarFontColorHover = grey
borderWhenActive= 5px

.sidebar
  background-color var(--sidebarColor)
  transition all sidebar-animate-speed
  width sidebarWidth
  min-width sidebarWidth
  z-index 10
  display flex
  flex-direction column
  height 100vh
  &__header
    height headerHeight
    min-height headerHeight
    display flex
    justify-content center
    align-items center
    &__expand
      color sidebarFontColor
      padding standardSpacing
      transition all sidebar-animate-speed
      &:hover
        color sidebarFontColorHover
    & .tracimLogo
      flex 1
      text-align center
      filter drop-shadow(0px 0px 20px grey)
  &__search
    padding standardSpacing
    & > .search
      padding textSpacing standardSpacing
    & > .sidebar__item
      display none
  &__item
    display flex
    align-items center
    color sidebarFontColor
    white-space nowrap
    overflow hidden
    width 100%
    height 40px
    min-height 40px
    padding-inline-start borderWhenActive
    background-color transparent
    & *
      color sidebarFontColor
    &__unread
      font-weight bold
    &:hover
      background-color var(--sidebarColorDarken)
      color sidebarFontColor
    &__current
      padding-inline-start 0
      border-inline-start-style solid
      border-inline-start-width borderWhenActive
      background-color var(--sidebarColorLighten)
      font-weight bold
      &.sidebar__item__space
        padding-inline-start 0
      &.sidebar__search
        padding-inline-start textSpacing
    &__profile
      font-weight bold
    &__name
      align-items center
      display inline-flex
      padding standardSpacing
      width 100%
      & .label
        overflow hidden
        text-overflow ellipsis
        unicode-bidi plaintext
      & > span
        display flex
        align-items center
    &__space
      display flex
      padding-inline-start borderWhenActive
      align-items center
      & > *
        color sidebarFontColor
      &:hover
        background-color var(--sidebarColorDarken)
    &__withoutChildren
      padding-inline-start 20px
    &__foldChildren
      height 100%
      &:hover > .iconbutton__icon
        color sidebarFontColorHover
    &__dragNdrop
      margin-inline-start textSpacing
    &__menu.dropdownMenuButton
      & i
        width auto
        color sidebarFontColor
        &:hover
          color sidebarFontColorHover
      &:focus
        outline none
      &::after
        display none
  &__title
    display flex
    color offWhite
    font-weight bold
    padding-inline-start borderWhenActive
    & .sidebar__item__name
      padding-inline-start 0
  &__spaces
    overflow-y auto
    flex 1
  &__mention
    background-color errorRed
    border-radius 50%
    font-size metadataFontSize
    font-weight bold
    line-height mentionCircleSize
    margin-inline-start textSpacing
    min-width mentionCircleSize
    display flex
    align-items center
    justify-content center
  &__notification
    height notificationCircleSize
    width notificationCircleSize
    border-radius 50%
    background-color lightBlue
    margin-inline-start textSpacing
  &__footer
    margin-top auto
    margin-bottom standardSpacing
    display flex
    flex-direction column
    &__buttons
      margin standardSpacing
      & > *
        margin-top standardSpacing
        width 100%
    &__text
      color sidebarFontColor
      font-size metadataFontSize
      margin 0 auto
      display flex
      &__link
        & > a
          color sidebarFontColor
          font-size metadataFontSize
          margin-inline-start textSpacing
          &:hover
            text-decoration underline

// INFO - GB - 2022-07-26 - Closed sidebar
.sidebar
  &.sidebarClose
    width closedSidebarWidth
    min-width unset
    & .tracimLogo
      display none
    & .sidebar__search
      padding 0
      & > .search
        display none
      & > .sidebar__item
        display flex
    & .sidebar__item
      justify-content center
      & > span
        display none
      &__name
        justify-content center
        & > span
          display none
        & .sidebar__mention, .sidebar__notification
          font-size 0
          min-width wallCircleSize
          width wallCircleSize
          height wallCircleSize
          position absolute
          margin-inline-start 25px
      &__foldChildren
        display none
    & .sidebar__spaces
      display none
    & .sidebar__footer
      & .iconbutton__label, .iconbutton__label-mobile
        display none
      & .sidebar__footer__text
        display none
    & .sidebar__title .sidebar__item__name
        padding-inline-start standardSpacing

// INFO - GB - 2022-07-26 - Icon colors
.sidebar__search__item i
  color grey
.sidebar__notification__item i
  color lightBlue
.sidebar__activities__item i
  color warningOrange
.sidebar__agendas__item i
  color #ff4b3a
.sidebar__tasks__item i
  color greenToDo
.sidebar__favorites__item i
  color #ffeb3b
.sidebar__spaces__item i
  color #ad3bdb
.sidebar__users__item i
  color #946645
.sidebar__account__item i
  color #00bcd4
.sidebar__logout__item i
  color errorRed

body.tox-fullscreen .sidebar
  display none

@media (max-width: max-xs) and (max-width: max-lg)
  .siebarpagecontainer
    position relative

  .sidebar
    position absolute
    min-height 100%
    &.sidebarClose
      position static
