@import "~tracim_frontend_lib/src/css/Variable.styl"

sidebar-width = 300px
sidebar-animate-speed = 0.5s

sidebarColor = #333
sidebarColorDarken = darken(sidebarColor, 15%)

.sidebar
  position relative
  &__expand
    left sidebar-width
    top 0
    position absolute
    display flex
    z-index 15
    justify-content center
    align-items center
    border 1px solid sidebarColor
    border-bottom-right-radius 15px
    padding 8px 15px
    cursor pointer
    color offWhite
    transition all sidebar-animate-speed
    background-color sidebarColor
    &.sidebarclose
      left 0
  &__frame
    position relative
    transition all sidebar-animate-speed
    width sidebar-width
    height "calc(100vh - %s)" % headerHeight
    z-index 10
    box-shadow -1px 2px 2px 1px sidebarColor
    background-color sidebarColor
    &.sidebarclose
      width 0
      overflow hidden
  &__scrollview
    height 100%
    overflow-y auto
    display flex
    flex-direction column
    -ms-overflow-style none // INFO - GB - 2020-10-23 - Hide scrollbar for IE and Edge
    scrollbar-width none // INFO - GB - 2020-10-23 - Hide scrollbar for Firefox
    &::-webkit-scrollbar // INFO - GB - 2020-10-23 - Hide scrollbar for Chrome, Safari and Opera
      display none
  &__scrollup
    position fixed
    bottom 0
    left sidebar-width
    display flex
    justify-content center
    align-items center
    border 1px solid sidebarColor
    border-top-right-radius 15px
    padding 8px 12px
    cursor pointer
    color offWhite
    transition all sidebar-animate-speed
    background-color sidebarColor
    ^[0].sidebarclose ^[1] // renders .sidebar.sidebarclose .sidebar__scrollup
      left 0
  &__content
    position relative
    &__navigation
      padding 0
      transition all sidebar-animate-speed
      &.sidebarclose
        width 0
      &__workspace
        padding-left 0
        list-style none
      &__item
        display flex
        align-items center
        border-left-width 0
        border-left-style solid
        padding-left 5px
        border-bottom 1px solid darkGrey
        background-color sidebarColor
        cursor pointer
        justify-content space-between
        width 100%
        height 100%
        &:hover
          background-color sidebarColorDarken
        &__menu
          color offWhite
          &:hover
            color offWhtite
          &:focus
            outline none
          &::after
            display none
        &__dragNdrop
          margin-left 5px
        &__wrapper
          display flex
          align-items center
          color offWhite
          white-space nowrap
          overflow hidden
          width 100%
          &:hover
            color offWhite
        &__number
          display flex
          width 50px
          height 50px
          font-size 18px
          padding 12px
          letter-spacing 2px
          & .fa
            font-size 26px
        &__name
          padding 10px
          width 100%
          font-size 20px
          overflow hidden
          text-overflow ellipsis
        &__current
          padding-left 0
          background-color lightDarkGrey
          border-left-width 5px
          font-weight bold
  &__footer
    margin-top auto
    position relative
    &__buttons
      width: 75%
      margin-left: 12.5%
      overflow hidden
      display: flex
      flex-direction: column
      justify-content: center
      margin-bottom: 10px
      & > *
        margin-bottom: 10px
        width: 100%
    &__text
      color offWhite
      font-size 14px
      &__link
        & > a
          color offWhite
          font-size 14px
          &:hover
            text-decoration underline
            color fourthColor

@media (min-width: min-lg) and (max-width: max-lg)
  .sidebarpagecontainer
    position relative

  .sidebar
    &__frame
      position absolute
      min-height "calc(100% - %s)" % headerHeight

