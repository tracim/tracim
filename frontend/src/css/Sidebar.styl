@import "~tracim_frontend_lib/src/css/Variable.styl"

sidebar-width = 300px
sidebar-animate-speed = 0.5s

sidebarColor = #333
sidebarColorDarken = darken(sidebarColor, 15%)

.sidebar
  &__expand
    position fixed
    left sidebar-width
    display flex
    z-index 10
    justify-content center
    align-items center
    border 1px solid sidebarColor
    border-bottom-right-radius 15px
    padding 8px 15px
    cursor pointer
    color offWhite
    transition all sidebar-animate-speed
    background-color sidebarColor
    &.sidebarclose
      left 0
  &__frame
    position relative
    transition all sidebar-animate-speed
    width sidebar-width
    height "calc(100vh - %s)" % headerHeight
    z-index 10
    box-shadow -1px 2px 2px 1px sidebarColor
    background-color sidebarColor
    &.sidebarclose
      width 0
      overflow hidden
  &__scrollview
    width "calc(%s + 20px)" % sidebar-width
    height 100%
    overflow-y auto
    display flex
    flex-direction column
    &::-webkit-scrollbar
      display none
  &__scrollup
    position fixed
    bottom 0
    left sidebar-width
    display flex
    justify-content center
    align-items center
    border 1px solid sidebarColor
    border-top-right-radius 15px
    padding 8px 12px
    cursor pointer
    color offWhite
    transition all sidebar-animate-speed
    background-color sidebarColor
    ^[0].sidebarclose ^[1] // renders .sidebar.sidebarclose .sidebar__scrollup
      left 0
  &__content
    &__buttons
      padding 50px 0
      overflow hidden
      color fontColor
      display: flex
      flex-direction: column
      align-items: stretch
      & button
        margin-top 10px
      & button:first-child
        margin-top 0px
    &__navigation
      padding 0
      width sidebar-width
      transition all sidebar-animate-speed
      &.sidebarclose
        width 0
      &__workspace
        padding-left 0
        list-style none
        &__item
          &__menu
            color offWhite
            &:hover
              color offWhtite
            &:focus
              outline none
            &::after
              display none
          &__dragNdrop
            margin-left 5px
          &__wrapper
            display flex
            align-items center
            border-bottom 1px solid
            width 100%
            height 100%
            cursor pointer
            background-color sidebarColor
            border-color darkGrey
            color offWhite
            &:hover
              background-color sidebarColorDarken
              color offWhite
          &__number
            display flex
            width 50px
            height 50px
            font-size 18px
            padding 12px
            letter-spacing 2px
            & .fa
              font-size 26px
          &__name
            padding 10px
            width 100%
            font-size 20px
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
          &__current
            text-decoration underline
            font-weight bold
  &__footer
    margin-top auto
    &__text
      color offWhite
      font-size 14px
      &__link
        & > a
          color offWhite
          font-size 14px
          &:hover
            text-decoration underline
            color fourthColor

@media (min-width: min-lg) and (max-width: max-lg)
  .sidebarpagecontainer
    position relative

  .sidebar
    &__frame
      position absolute
      min-height "calc(100% - %s)" % headerHeight

