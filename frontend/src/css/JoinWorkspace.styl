.joinWorkspace
  &__content__workspaceList
    display flex
    flex-direction column
    margin-top standardSpacing

    & > *:first-child
      background-color transparent
      padding 0
      height auto
      margin-bottom standardSpacing
      &:hover
        background-color transparent
      & > *:last-child
        text-align start

    &__item
      display flex
      flex-direction row
      padding-top standardSpacing
      padding-bottom standardSpacing
      align-items center
      line-height 1.5
      height listItemHeight
      width 100%
      background-color offWhite

      &:nth-child(2n):not(:hover)
        background-color lightGrey2

      &:hover
        background-color lightGrey1

      & > *
        margin-inline-start standardSpacing
        flex auto

      // buttons "column"
      & > *:last-child
        flex 0 0 220px
        margin-inline-end standardSpacing
        text-align center

      // type "column"
      & > *:first-child
        flex 0 0 60px
        margin 0
        text-align center

      &__title_description
        display flex
        flex-direction column
        overflow hidden

        & span
          overflow hidden
          white-space nowrap
          text-overflow ellipsis

      &__description
        font-size metadataFontSize
