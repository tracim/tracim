@import "~tracim_frontend_lib/src/css/Variable.styl"

.joinWorkspace
  &__wrapper
    width: 100%
  &__content__workspaceList
    display: flex
    flex-direction: column
    margin-top: 10px
    border-bottom: 1px solid grey

    & > *:first-child
      border: none

      & > *:last-child
        text-align: left

    &__item
      border: 1px solid grey
      border-bottom: 0
      display: flex
      flex-direction: row
      padding-top: 10px
      padding-bottom: 10px
      align-items: center
      line-height: 1.5
      height: 60px

      & > *
        margin-left: 10px
        flex: auto

      // buttons "column"
      & > *:last-child
        flex: 0 0 200px
        margin-right: 10px
        text-align: center

      // type "column"
      & > *:first-child
        flex: 0 0 60px

      &__title_description
        display: flex
        flex-direction: column
        text-overflow: ellipsis
        overflow: hidden
        white-space: nowrap

      &__description
        font-size: fontSizeSmall
