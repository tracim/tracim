@import "~tracim_frontend_lib/src/css/Variable.styl"

.dashboard
  .pageContentGeneric
    margin 0
    min-height 100%
    padding 0

.dashboard
  width 100%
  min-height 100%
  &__header
    &__title
      width auto
      &__text
        margin 0
  &__workspace
    display flex
    flex-wrap wrap
    align-items flex-start
    &__detail
      margin-right 20px
      width calc(70% - 20px) //20px => margin-right
      &__right
        width 27%
        margin-top 30px
        &__button
          font-size fontSizeSmall
          margin-left auto
          display block
          & .fa
            margin-right 8px
      &__title
        margin 0 30px 20px 30px
        font-size 70px
        font-weight 500
        display flex
        justify-content space-between
      &__description
        margin-left 30px
        font-size 18px
  &__calltoaction
    display flex
    flex-wrap wrap
    margin 40px 30px
    &__button
      &:active
        box-shadow inset 0px 0px 5px 2px #656565
      &__text
        color white
        display flex
        flex-direction column
        &__icon
          font-size 40px
        &__title
          font-size 16px
  &__workspaceInfo
    display flex
    flex-wrap wrap
    padding 30px
    min-height 100%
  &__section
    padding 30px

@media (min-width: min-lg) and (max-width: max-lg)
  .dashboard__workspace__detail__right
    width 28%

@media (min-width: min-md) and (max-width: max-md)
  .dashboard
    &__workspace
      width 100%
      &__detail
        order 2
        width 100%
        &__right
          margin 40px auto
          width 50%
          display flex
          flex-direction column-reverse
          &__button
            margin-top 20px
    .memberlist
      margin-left 0

@media (min-width: min-sm) and (max-width: max-sm)
  .dashboard
    &__workspace
      &__detail
        &__right
          margin 30px auto
          width auto
          &__button
            display none
    &__workspace
      width 100%
      &__detail
        order 2
        width 100%

@media (max-width: max-xs)
  .dashboard .pageContentGeneric
    margin 10px 0 0 0

  .dashboard
    &__workspace
      &__detail
        &__right
          margin 20px auto
          width auto
          &__button
            display none
    &__workspace-wrapper
      margin 0 15px
    &__workspace
      width 100%
      &__detail
        order 2
        width 100%
        &__title
          font-size 45px
          word-break break-word
    .memberlist
      &__list__item__delete
        display none
      &__btnadd
        display none
