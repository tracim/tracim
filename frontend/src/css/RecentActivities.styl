@import '~tracim_frontend_lib/src/css/Variable.styl'

.recentActivities
  background-color veryLightGrey
  display flex
  flex-direction column
  align-items center
  width 100%
  overflow auto
  height "calc(100vh - %s)" % headerHeight

  & .activityList
    margin-top 10px
    margin-bottom 10px

.personalRecentActivities
  @extend .recentActivities

.workspaceRecentActivities
  @extend .recentActivities
  & .tabBar
    width 100%
