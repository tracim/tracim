//  HACK - ML - 2022-15-11 - This is the width of the createInFolderButton. This is used to align folder's and content's
//  lastModification column. This will be removed in a content listings refactor
//  https://github.com/tracim/tracim/issues/6034
createInFolderButtonWidth = 74px

.content__header
  display flex
  &__type
    flex-grow 0
    padding standardSpacing
    text-align center
  &__name
    flex 2
    padding standardSpacing
  &__status
    flex-grow 0
    padding standardSpacing
    width 140px
    text-align center
  &__modification
    flex 1
    padding standardSpacing
  &__actions
    padding standardSpacing
  &__search
    display flex
    flex-grow 5
    &__path
      flex 2
      padding 15px 5px
    &__modification
      flex 1
      padding 15px 5px

@media (max-width: max-xs)
  .content__header__status
    width 70px
    text-align end

@media (max-width: max-sm)
  .content__header
    &__actions
      display none

@media (max-width: max-md)
  .content__header
      &__modification
        display none
