backgroundColor = grey-hover
feedWidth = 800px
smallScreenFeedWidth = 400px

.feedItem
  background-color backgroundColor
  border borderStyle
  padding-top standardSpacing
  padding-inline-start standardSpacing
  padding-bottom standardSpacing
  padding-inline-end 0
  margin-bottom standardSpacing
  border-radius standardBorderRadius
  margin-inline-end auto
  margin-inline-start auto
  width feedWidth
  max-width 100%
  &__content
    position relative
    background-color offWhite
    margin-top standardSpacing
    border-radius standardBorderRadius
    margin-inline-end standardSpacing
  & .timeline
    width 100%
    height unset
  &__timeline
    &__texteditor.timeline__texteditor
      margin standardSpacing 0 0
    &__messagelist
      padding 0
    &__comment.sent
      margin-inline-end standardSpacing
  &__publication
    &__messagelist__item
      margin-bottom 0
      padding-inline-end standardSpacing
    &.comment
      border 0
      &.sent, &.received
        margin 0

@media (max-width: max-sm)
  .feedItem__timeline__texteditor__advancedtext
    display none
