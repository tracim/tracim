@import '~tracim_frontend_lib/src/css/Variable.styl'

.activity_feed
  background-color lightGrey
  display flex
  flex-direction column
  align-items center
  width 100%
  overflow auto
  height "calc(100vh - %s)" % headerHeight

  &__content
    display flex
    width: 800px
    align-items center
    flex-direction column

  &__refresh
    margin-right 0

  &__list
    display flex
    width: 100%
    flex-direction column

  &__item
    background-color white
    border 1px solid grey
    border-radius 5px
    padding 10px
    margin-bottom 10px

@media (max-width: max-sm)
  .activity_feed
    &__content
      width 400px
