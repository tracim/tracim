@import '~tracim_frontend_lib/src/css/Variable.styl'

feedWidth = 800px
smallScreenFeedWidth = 400px
spacingSize = 10px

.activity_feed
  background-color lightGrey
  display flex
  flex-direction column
  align-items center
  width 100%
  overflow auto
  height "calc(100vh - %s)" % headerHeight

  &__content
    display flex
    width: feedWidth
    align-items center
    flex-direction column
    padding-bottom spacingSize

  &__refresh
    margin-right 0

  &__list
    display flex
    width: 100%
    flex-direction column

  &__item
    background-color offWhite
    border 1px solid grey
    border-radius 5px
    padding spacingSize
    margin-bottom spacingSize

@media (max-width: max-sm)
  .activity_feed
    &__content
      width smallScreenFeedWidth
