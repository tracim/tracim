@import '~tracim_frontend_lib/src/css/Variable.styl'

.activityFeed
  background-color veryLightGrey
  display flex
  flex-direction column
  align-items center
  width 100%
  overflow auto
  height "calc(100vh - %s)" % headerHeight

  & .activityList
    margin-top 10px
    margin-bottom 10px

.personalActivityFeed
  @extend .activityFeed

.workspaceActivityFeed
  @extend .activityFeed
  & .tabBar
    width 100%
