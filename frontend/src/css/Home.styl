@import "~tracim_frontend_lib/src/css/Variable.styl"

.homepage
  display flex
  align-items center
  flex-direction column
  justify-content center
  min-height 100%
  &__usernamePopup
    .cardPopup__container
      width 400px
    &__body
      width 100%
      &__title
        font-weight bold
        text-align center
        margin-bottom 20px
      &__input
        margin 5px 0
      &__checkbox
        display flex
        margin-top 20px
        &__input
          margin auto 5px
      &__smallmsg
        font-size small
      &__btn
        display flex
        margin-left auto
    &__errorMsg
      margin 5px 0 10px
      color errorRed
    &__errorIcon
      margin-right 5px
    &__infoMsg
      margin 5px 0 10px
      color grey
