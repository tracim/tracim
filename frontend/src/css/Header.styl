.slowblink
  animation: blink-animation 2.5s steps(100, start) 2
@keyframes blink-animation
  to
    opacity 0

.header
  width 100%
  & .navbar
    padding 5px
    z-index 30 // INFO - CH - 2019-04-18 - higher than .wsContentGeneric and lower than caldavzap fullscreen
    border-bottom 1px solid grey
  &__logo
    padding 0
    cursor pointer
    &__img
      max-width 150px
      max-height 50px
  &__breadcrumb
    width auto
  &__menu
    justify-content flex-end
    &__list
      display none
      margin-left 50px
      .list__item
        padding-right 30px
        &__link
          color blue
          font-size 16px
          &:hover
            color darkBlue
    &__system
      display flex
      justify-content flex-end
      align-items center
      height 100%
      &__icon
        margin-right 5px
        opacity 1
      &__text
        margin-right 5px
        font-size 12px
    &__rightside
      display flex
      justify-content flex-end
      margin 5px 0
      list-style none
      & li:not(:last-child)
        margin-right 10px
      &__itemsearch
        display none
        margin-right 8%
        width 55%
        &__search
          width 100%
          .search__addonsearch
            background-color transparent
            cursor pointer
      &__itemquestion
        display none
        &__btnquestion
          margin-right 30px
          .btnquestion__icon
            color darkGrey
      &__itemnotification
        display none
        &__timeline
          margin-right 30px
          .timeline
            &__btnnotif
              color darkGrey
              &::after
                margin-left 15px
            &__subdropdown
              padding 0
              left inherit
              right 0
              cursor pointer
              &__text
                padding 10px;
      &__agenda
        margin-right 15px
        & .btn
          font-size 14px
        & .fa
          margin-right 8px

@media (min-width: min-lg) and (max-width: max-lg)
  .header
    &__menu
      &__rightside
        display flex
        justify-content flex-end
        width 100%

@media (min-width: min-md) and (max-width: max-md)
  .header
    &__logo__img
      margin-left 0
    &__menu
      &__rightside
        width 100%


responsiveNavbarCollapseFixed =
  position fixed
  left 0
  top "calc(%s - 1px)" % headerHeight
  width 100%
  background-color #f8f9fa
  border-bottom 1px solid #ccc

@media (min-width: min-sm) and (max-width: max-sm)
  .header
    &__logo__img
      margin-left 0
    &__menu
      &.navbar-collapse
        {responsiveNavbarCollapseFixed}
      &__rightside
        padding-left 0
        width 100%
        &__itemquestion
          display none

@media (max-width: max-xs)
  .header
    &__logo__img
      margin-left 0
    &__menu
      &.navbar-collapse
        {responsiveNavbarCollapseFixed}
      &__rightside
        flex-wrap wrap
        padding-left 0
        & li
          margin 2px 0
        &__itemquestion
          display none
