@import "~tracim_frontend_lib/src/css/Variable.styl"

previewBorderColor = mediumGrey

.feedItem__preview
  & > a
    display flex
    min-height 100%
    color inherit
    overflow hidden

    & > *
      display flex
      flex 1
      align-items center
      justify-content center
      flex-direction column
      overflow hidden

  &__html
    text-align justify
    margin standardSpacing

    a-in-preview
      color bootstrapLinkColor

    > .html-content
      align-self stretch

  &__unavailable
    display block
    text-align center

    & > a
      display block

    .far, span
      display inline-block
      padding standardSpacing standardSpacing standardSpacing 0
      vertical-align middle

  &__image
    padding 15px
    & > img
      max-width 100%
      box-shadow 0px 0px 10px mediumDarkGrey
