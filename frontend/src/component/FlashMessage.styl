@import "../../node_modules/tracim_frontend_lib/src/css/Variable.styl"

.flashmessage
  position fixed
  display flex
  justify-content center
  margin-left calc(50% - 400px)
  z-index 60
  &__container
    margin-top 50px
    border 0
    border-radius 10px
    width 800px
    background lightGrey
    box-shadow shadow-all
    &__header
      border-top-right-radius 10px
      border-top-left-radius 10px
      width 100%
      height 8px
    &__close
      float right
      margin 5px 0 0 0
      &__icon
        padding-right 10px
        cursor pointer
    &__content
      display flex
      align-items center
      margin 10px 0 10px 0
      &__icon
        padding 0 25px
        font-size 40px
      &__text
        &__title
          font-weight bold
        &__paragraph
          padding-right 20px

@media (max-width: max-sm)
  .flashmessage
    margin-left 0px
    width 100%
    &__container
      width 100%
