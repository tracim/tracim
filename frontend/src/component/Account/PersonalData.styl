@import "~tracim_frontend_lib/src/css/Variable.styl"

.personaldata
  &__text
    margin 15px 0
    font-size 18px
  &__form
    margin 25px 0
    &__txtinput
      display block
      width 300px
      border-width 1px
      border-style solid
      border-radius 5px
      &[placeholder]
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
      &:disabled
        cursor not-allowed
      &.withAdminMsg
        margin-right 20px
      &__info
        margin 5px
        &__icon
          margin-right 5px
      &__msgerror
        margin-left 10px
        margin-top 0.5em
        color errorRed
        &__icon
          margin-right 5px
      &__msginfo
        font-size small
        margin-left 5px
        text-align right
    &__button
      vertical-align top
      border-width 1px
      border-style solid
      border-radius 5px
