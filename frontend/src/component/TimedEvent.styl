@import '~tracim_frontend_lib/src/css/Variable.styl'

.timedEvent
  font-size metadataFontSize
  white-space nowrap
  display flex
  flex-direction column
  &__top.btn
    padding 0
    margin 0
    font-size metadataFontSize
    &::after
      display none
    &:hover
      text-decoration underline
    &Contents
      text-overflow ellipsis
      overflow hidden
  &__bottom
    overflow hidden
    display flex
    flex-direction row
  &__author
    overflow hidden
    font-weight bold
    text-overflow ellipsis
  & .dropdownMenuItem
    cursor auto
    border-bottom 1px solid mediumGrey
    align-items flex-end
    & .timedEvent
      margin 0
    &:hover
      background-color offWhite

@media (max-width max-sm)
  .rootTimedEvent__operation
      display none
  .timedEvent
    &__bottom
      max-width 100%
