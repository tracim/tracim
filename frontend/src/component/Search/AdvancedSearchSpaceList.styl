@import "~tracim_frontend_lib/src/css/Variable.styl"

.advancedSearchSpace
  height 65px
  width 100%
  display flex
  align-items center
  &__type
    &__content
      font-size titleFontSize
      color fontColor
      display flex
      flex-direction column
      align-items center
      width 90px
      place-content center
      & > span
        font-size metadataFontSize
    &__header
      margin standardSpacing 25px
  &__name
    padding 0px 5px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    color fontColor
    align-self center
    flex 4
  &__information
    color fontColor
    align-self center
    overflow hidden
    text-overflow ellipsis
    flex 1
    margin-inline-end 25px
    & > *
      font-size metadataFontSize
    & > i
      margin-inline-start 5px

@media (max-width: max-md)
  .advancedSearchSpace
    &__type
      &__header
        margin standardSpacing standardSpacing
      &__content
        width 50px
        & > span
          display none

@media (max-width: max-xs)
  .advancedSearchSpace
    &__information
      display none
