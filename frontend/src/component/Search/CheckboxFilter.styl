@import '~tracim_frontend_lib/src/css/Variable.styl'

.checkboxFilter
  &__title
    background-color lightGrey2
    height 40px
    align-items center
    display flex
    padding standardSpacing
    & > button
      padding 0
      margin-inline-end standardSpacing
  &__checkbox
    padding 0px 5px
    display flex
    align-items center
    & > *
      cursor pointer
    & > input[type='checkbox']
          margin 0px standardSpacing
    &__input
      margin-inline-start textSpacing
      margin-inline-end standardSpacing
      align-self start
      // INFO - AJ - 2022-06-06 - Adding 2 pixels at top-margin in order to have the box aligned whether field name is single or multi-line
      margin-top 2px
    &__label
      overflow hidden
      flex 1
      text-overflow ellipsis
