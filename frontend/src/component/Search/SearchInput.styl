@import '~tracim_frontend_lib/src/css/Variable.styl'

.search
  display flex
  padding standardSpacing
  line-height 1.25
  background-color offWhite
  border-radius standardBorderRadius
  box-shadow 0px 0px 20px 0px lightGrey1
  &__text
    border none
    background-color transparent
    width 100%
    &:focus
      box-shadow 0 0 0 0
      border 0 none
      outline 0
  &__btn
    color grey
    border none
    background-color transparent
    cursor pointer
    margin-inline-start auto
    &:focus
      box-shadow 0 0 0 0
      border 0 none
      outline 0
    &:disabled
      cursor not-allowed
    &:hover
      color fontColor

@media (min-width: min-lg) and (max-width: max-lg)
  .search
    &__text
      width 172px
