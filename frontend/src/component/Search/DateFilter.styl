@import "~tracim_frontend_lib/src/css/Variable.styl"

.dateFilter
  &__checkbox
    padding 0px 5px
    display flex
    align-items center
    & > *
      cursor pointer
    & > input[type='checkbox']
          margin 0px standardSpacing

.DayPicker
  border borderStyle
  &-Day--today
    color fontColor
.DayPickerInput
  margin-inline-start standardSpacing
  flex 1
  & input
    width 100%
  &-OverlayWrapper
    margin-inline-start -80px
