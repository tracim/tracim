@import "~tracim_frontend_lib/src/css/Variable.styl"

.advancedSearchLoader
  height 100%
  position relative
  &__loading
    text-align center
    padding 35px
    color fontColor
    & > i
      margin standardSpacing
  &__options
    y 18px
    width 110px
  &__thirdColumn
    x 690px
  &__svg
    position absolute
    top 0
    left 0
    width 100%
    height 600px
    &__rectangle
      &__list
        width 100%
        fill offWhite
        stroke grey
        height 65px
      &__text
        fill lightGrey
        height mediumTitle
        rx 5px
      &__icon
        height bigIconSize
        width bigIconSize
        fill lightGrey
        x 35px
        rx 5px
      &__button
        fill lightGrey
        rx 5
        x 1200px
        y 70px
        width 100px
        height 40px
      &__input
        x 365px
        y 9px
        width 930px
        height 40px
        rx 5px
        fill offWhite
        stroke grey

@media (max-width max-sm)
  .advancedSearchLoader
    &__options
      y 60px
      width 200px
    &__svg__rectangle__input
      x 0px
      width 100%
    &__thirdColumn
      display none
