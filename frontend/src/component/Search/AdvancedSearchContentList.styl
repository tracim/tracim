@import "~tracim_frontend_lib/src/css/Variable.styl"

.advancedSearchContent__link
  position absolute
  top 0
  left 0
  right 0
  bottom 0

.advancedSearchContent
  &__wrapper
    height 65px
    width 100%
    display flex
    align-items center
  &__typeAndTitle
    display none
  &__type
    &__content
      font-size fontSizeTitle
      display flex
      flex-direction column
      align-items center
      width 90px
      place-content center
      & > span
        font-size fontSizeSmall
    &__header
      margin 15px 25px
      text-align center
      align-self center
  &__name_path
    flex 1
  &__title
    padding 0px 5px
    white-space nowrap
    overflow hidden
    text-overflow ellipsis
    color fontColor
    align-self center
    flex 1
    width 0
  &__modification
    align-content center
    display flex
    width 250px
    margin-left 10px
    margin-right 10px


  &__information
    color fontColor
    align-self center
    margin-inline-end 5px
    width 160px
    display flex
    align-items center
    & > *
      font-size fontSizeSmall
    & > i
      margin-inline-end 5px
      margin-inline-start 2px

.advancedSearch__openMenu
  & .timedEvent.advancedSearchContent__modification .timedEvent__operation
    display none
  & .advancedSearch__content .content .breadcrumbs
    display none
  & .advancedSearchContent .advancedSearchContent__title
    padding-bottom 0

.timedEvent.advancedSearchContent__modification
  width 250px
  margin 0

  .timedEvent__bottom
    justify-content start


@media (max-width: max-lg)
  .advancedSearchContent
    &__type
      &__header
        margin 15px 10px
      &__content
        width 50px
        & > span
          display none
    &__modification
      margin-inline-end 30px
  .advancedSearch__content .content .breadcrumbs
    left 55px
  .timedEvent.advancedSearchContent__modification
    right 195px
    & .timedEvent__operation
      display none
  .advancedSearch__openMenu
    & .advancedSearchContent
      &__information
        display none
      &__modification
        margin-inline-end 15px
    & .timedEvent.advancedSearchContent__modification
      right 0px

@media (max-width: max-md)
  .advancedSearchContent
    &__information
      display none
    &__modification
      margin-inline-end 15px
  .timedEvent.advancedSearchContent__modification
    right 15px

@media (max-width: max-sm)
  .advancedSearchContent
    & .advancedSearchContent
      &__type__content
        width 50px
      &__title
        padding 0px 5px
    &__modification
      display none
    &__typeAndTitle
      display unset
      padding 15px 5px
      flex 1
  .content__header
    & .advancedSearchContent
      &__title
        display none
  .advancedSearch__content .content .breadcrumbs
      display none
