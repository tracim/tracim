@import '~tracim_frontend_lib/src/css/Variable.styl'
@import './Common.styl'

.content_activity_header
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: center
    width: 100%

    &__left
        display: flex
        flex-direction: row
        align-items: center

        &__icon
            font-size iconFontSize
            margin-right 10px

        &__label
            font-size: 20px
            text-decoration: underline black
            color: black
            white-space nowrap
            overflow hidden
            text-overflow ellipsis

            & > a
                color: black
    &__right
        font-size: fontSizeSmall
        margin-left: 10px
        text-align: right
        white-space nowrap
    &__author
        font-weight: bold

    & .breadcrumbs
        position: relative
        top: 0
        left: 0
