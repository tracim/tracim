@import "~tracim_frontend_lib/src/css/Variable.styl"

.content_activity_header
    position: relative
    display: inline-block
    width: 100%

    &__left
        float: left

        &__label
            font-size: 20px
            text-decoration: underline black
            color: black

            & > a
                color: black
    &__right
        font-size: fontSizeSmall
        float: right
    &__author
        font-weight: bold

    & .breadcrumbs
        position: relative
        top: 0
        left: 0
