@import "~tracim_frontend_lib/src/css/Variable.styl"

.contentTypeBtn
  display flex
  justify-content center
  margin borderSpacing 30px 0 0
  border-radius 10px
  padding borderSpacing
  width 150px
  height 150px
  box-shadow shadow-half
  text-align center
  cursor pointer

@media (min-width: min-sm) and (max-width: max-sm)
  .contentTypeBtn
    align-items center
    justify-content center
    margin 20px

@media (max-width: max-xs)
  .contentTypeBtn
    align-items center
    justify-content center
    margin 20px
