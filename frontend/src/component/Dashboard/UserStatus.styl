@import "~tracim_frontend_lib/src/css/Variable.styl"

.userstatus
  &__role
    display flex
    align-items center
    justify-content center
    &__icon
      margin 0 5px
    &__text
      font-weight bold
  &__notification
    display flex
    align-items center
    padding 20px 0 10px 0
    cursor pointer
    &__icon
      margin-left 15px
      text-align left

@media (min-width: min-md) and (max-width: max-md)
  .userstatus
    top 0
    &__wrapper
      top 0

@media (min-width: min-sm) and (max-width: max-sm)
  .userstatus
    top 0
    &__wrapper
      top 0

@media (max-width: max-xs)
  .userstatus
    top 0
    padding 20px 30px
    &__wrapper
      top 0
