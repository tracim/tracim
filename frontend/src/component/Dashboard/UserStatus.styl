@import "~tracim_frontend_lib/src/css/Variable.styl"

.userstatus
  width 27%
  position relative
  top 120px
  border-radius 5px
  padding 40px
  background-color offWhite
  text-align center
  font-size fontSizeMedium
  &__role
    display flex
    align-items center
    padding 25px 0 15px 0
    &__text
      margin-left 15px
      text-align left
  &__notification
    display flex
    align-items center
    padding 20px 0 10px 0
    cursor pointer
    &__text
      margin-left 15px
      text-align left

@media (min-width: min-lg) and (max-width: max-lg)
  .userstatus
    width 28%

@media (min-width: min-md) and (max-width: max-md)
  .userstatus
    top 0
    margin 40px auto
    width 50%
    &__wrapper
      top 0

@media (min-width: min-sm) and (max-width: max-sm)
  .userstatus
    top 0
    margin 30px auto
    width auto
    &__wrapper
      top 0

@media (max-width: max-xs)
  .userstatus
    top 0
    margin 20px auto
    padding 20px 30px
    width auto
    &__wrapper
      top 0

