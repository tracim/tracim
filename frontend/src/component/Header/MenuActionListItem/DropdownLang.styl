@import "../../../../node_modules/tracim_frontend_lib/src/css/Variable.styl"

.dropdownlang
  margin-right 15px
  &__dropdown
    &__btnlanguage
      color darkGrey
      font-size 14px
      &:focus
        border-radius 5px
      &__imgselected
        margin-right 10px
        width 20px
        height 15px
        vertical-align middle
    &__subdropdown
      padding 0
      min-width 0
      &__link
        font-size 14px
        cursor pointer
        &:hover:not(:active)
          background-color grey-hover
        &__flag
          width 25px
          height 18px
          vertical-align text-top
          margin-right 5px
