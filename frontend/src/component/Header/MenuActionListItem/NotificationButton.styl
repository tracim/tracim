@import "~tracim_frontend_lib/src/css/Variable.styl"

.notificationButton
  &__btn
    position relative
    font-size 14px
    &::after
      margin-left 15px
    & .fa-bell
      margin-right 8px
  &__count
    position absolute
    top -7px
    right -7px
    height 20px
    width 20px
    line-height 20px
    border-radius 50%
    font-size 10px
    background-color lightBlue
    color white
    font-weight bold
