@import '~tracim_frontend_lib/src/css/Variable.styl'

.menuprofil
  margin auto 0
  &__dropdown
    &__name.btn
      padding 0
      & > .avatar-wrapper
        margin-right textSpacing
    &__setting
      left inherit
      right 0

@media (min-width: min-xs) and (max-width: max-lg)
  .menuprofil
    &__dropdown
      &__name
        &__text
          display none
