@import "../../node_modules/tracim_frontend_lib/src/css/Variable.styl"

.file
  height calc(100% - 61px)
  &__header
    &__editionmode
      display none
    .fa-file-image-o
      color white
  &__option
    &__menu
      &__addversion
        padding 8px 15px
        border-width 1px
        border-style solid
        border-radius 5px
        background-color transparent
        cursor pointer
        & > i
          margin-left 10px
  &__contentpage
    width 100%
    &__content
      height calc(100% - 120px)
      &__left
        background-color offWhite
    &__statewrapper
      height 100%
      overflow-y auto
      &.displayState > .previewcomponent // render .file__contentpage__statewrapper.displayState .file__contentpage__preview
        height calc(100% - 68px) // 100% - file__contentpage__preview__state height
    &__wrapper
      width 40%
      height calc(100% - 150px) // margin + height of header and option
      overflow-Y auto
      .timeline
        &__messagelist
          min-height 300px
    &__dropzone
      padding 20px 15px 20px 20px
      &__btn
        display flex
        justify-content flex-end
        &__cancel
          margin-right 15px
    &__rightContent
      width 100%
    &__messagelist
      padding 0 20px 10px

.activeEditionTitle
  .file__header
    &__editionmode
      display block
    &__title
      display none

.activeEditionDesc
  .file__contentpage__preview__content__detail
    &__description
      &__editiondesc
        display block
    &__btndesc
      display none

// MEDIAQUERIES

@media (min-width: max-xs) and (max-width: max-lg)
  .file
    &__contentpage
      display block
      &__preview
        display flex
        flex-direction column
        width calc(100% - 30px) // 30px => margin
      &__wrapper
        width calc(100% - 30px) // 30px => margin
        .timeline
          &__texteditor
            &__simpletext
              display inline-flex
              width 60%
            &__submit
              display inline-flex
              margin 10px 0
              &__btn
                display flex
                margin-left 35px
                &__icon
                  margin-left 15px
      &__statewrapper
        padding 0

@media (min-width: min-lg) and (max-width: max-lg)
  .file
    &__contentpage__content__left
      min-height 250px

@media (min-width: min-md) and (max-width: max-md)
  .file
    &__contentpage__content__left
      min-height 250px

@media (min-width: min-sm) and (max-width: max-sm)
  .file
    height calc(100% - headerHeight)
    &__contentpage__content__left
      min-height 250px

@media (max-width: max-xs)
  .file
    height calc(100% - headerHeight)
    &__option__menu__addversion
      padding 8px 5px
      & > i
        display none
    &__contentpage
      display block
      &__content
        &__left
          width 100%
          min-height 250px
        &__right
          width 100%
      &__statewrapper
        width 100%
      &__wrapper
        width calc(100% - 30px) // 30px => margin
        .timeline
          &__texteditor
            &__simpletext
              display inline-flex
              width 60%
              margin-right 0
            &__submit
              display inline-flex
              margin 10px 0
              &__btn
                display flex
                margin-left 10px
                &__icon
                  margin-left 15px
