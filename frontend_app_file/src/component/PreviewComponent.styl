@import "~tracim_frontend_lib/src/css/Variable.styl"

.ril__caption
  display flex
  flex-direction row-reverse

.previewcomponent
  height calc(100% - 130px)
  overflow-x hidden
  display flex
  width 100%
  align-items center
  justify-content center
  &__fileimg
    display flex
    flex-direction column
    justify-content center
    width 100%
    &__img
      margin auto
      max-height 100%
      max-width 100%
    &__text
      text-align center
      &-icon
        font-size bigIconSize
      &-msg
        margin-top standardSpacing
        word-break break-word
    &.previewAvailable
      cursor pointer
  &__navigationButton
    margin standardSpacing
    padding 0
    font-size titleFontSize
    cursor pointer
    &:focus
      box-shadow 0 0 0 0
      outline 0
  &__pagecount
    position absolute
    right 5px
    bottom 5px
    font-size metadataFontSize
  &__filepreview
    display flex
