@import "../../node_modules/tracim_frontend_lib/src/css/Variable.styl"

.share_folder_advanced
  width 1000px
  height calc(100% - 61px) // 61px it's the main header height
  &__content
    width 1000px
    padding 10px 0
    &__title
      display flex
      justify-content space-between
      padding 10px 0 10px 10px
      border-bottom 1px solid grey
      font-size 20px
      font-weight 400
      margin 0 20px 20px 10px
    &__btnupload
      margin auto 0
    &__empty
      margin 50px 20px

.share_folder
  &__contentpage
    &__content
      width 100%
      height calc(100% - 63px) // 63px = app header height
      overflow-y auto
      overflow-x hidden

.newUpload
  padding 10px
  width 100%
  &__title
    padding-bottom 22px
  &__email
    margin 0 15px
    padding 10px
    display flex
    &__icon
      background-color transparent
      border none
      cursor pointer
      margin auto
      color mediumDarkGrey
      &:focus
        box-shadow 0 0 0 0
        border 0 none
        outline 0
  &__password
    margin 0 15px
    padding 10px
    display flex
    flex-direction column
    &__active
      display flex
    &__wrapper
      display flex
      flex-grow 2
      border-width 1px
      border-style solid
      border-radius .25rem
      border-color lightgray
      background-color white
      padding-left 5px
      color grey
      & > i
        margin auto
    &__input
      border none
    &__icon
      background-color transparent
      border none
      cursor pointer
      &:focus
        box-shadow 0 0 0 0
        border 0 none
        outline 0
    &__link
      color grey
      text-decoration underline
      margin-left auto
      padding-right 36px
      cursor pointer
      &:hover
        color fontColor
  &__newBtn
    margin-top 15px
    margin-right 55px
  &__btnCancel
    margin 15px 15px 0 auto
  &__emailWarning
    margin 25px
