
@import "~tracim_frontend_lib/src/css/Variable.styl"

.html-document
  height "calc(100% - %s)" % headerHeight
  &__header
    &__editionmode
      display none
    &__icon
      .fa-file-alt
        color white
  &__editionmode
    &__container
      position relative
      height 100%
      min-height 400px
  &__lastversionbtn
    & > i
      font-size 20px
  .selectStatus
    margin-right 15px
  &__contentpage, &__contentpage__edition
    width 100%
    &__left
      &__wrapper
        height 100%
        overflow-y auto
    &__content
      height calc(100% - 120px)
      &__left
        background-color offWhite
    &__textnote
      padding 25px
      height 100%
      overflow-y auto
      background-color offWhite
      &__mentions
        font-weight bold
        margin 10px 0
      &__state
        display flex
        align-items center
        justify-content space-between
        margin-bottom 15px
        padding 5px 15px
        background-color #fee498
        border-radius 10px
        &__msg > i
          margin-right 8px
        &__btnrestore
          cursor pointer
          & > i
            margin-right 8px
          &.link
            color #453d9b
            &:hover
              color #1a0dab
              text-decoration underline
      &__top
        width 100%
        margin-bottom 10px
        display flex
        &__translation
          font-size fontSizeSmall
        &__version
          margin-left auto
          display flex
          color mediumDarkGrey
        &__lastversion
          margin-left 15px
          font-weight bold
      &__edition
        display none
      &__text_translated
        border-left-width 2px
        border-left-style solid
        padding-left 5px
        color lightDarkGrey
    &__messagelist
      min-height 70px
      padding 0 20px 10px
      &__item
        &__content
          color darkGrey
      &__version
        &__btn
          padding 5px 25px
          border-radius 5px
          width 145px
          color white
          font-size 17px
          & > i
            margin-right 10px
            color darkGrey
            font-size 20px
        &__date
          color fontColor
          font-size 17px

.messagelistOpen
  .timeline__messagelist
    flex 0
    min-height 0

.received
  .timeline__messagelist__item__content
    background-color htmlColor

.buttonLink
  border none
  background-color transparent
  text-decoration underline
  padding 0 5px
  cursor pointer
  &:hover
    text-decoration underline

// MEDIAQUERIES

@media (min-width: min-sm) and (max-width: max-lg)
  .html-document
    &__contentpage
      &, &__contentpage__edition
        &__left
          &__wrapper
            padding 0
        &__textnote
          margin 0
      &__edition__content
        &__left
          height 100%

@media (max-width: max-xs)
  .html-document
    &__contentpage
      &, &__contentpage__edition
        &__left
          &__wrapper
            padding 0
        &__textnote
          margin 0
      &__edition__content
        &__left
          height 100%
