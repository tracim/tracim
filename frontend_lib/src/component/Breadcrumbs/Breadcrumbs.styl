@import "../../css/Variable.styl"

.breadcrumbs
  display flex
  margin 0
  padding 0
  list-style none
  font-size metadataFontSize
  &.hidden
    display none
  &__item
    overflow hidden
    min-width 30px
    display flex
    flex-shrink 0
    align-items center
    white-space nowrap
    &__text:hover
      &__spacer:hover
        text-decoration-line none
    &.shrinkBreadcrumbs
      flex-shrink 1
      & > a
        flex 1
    &__separator
      color fontColor
      margin 0 textSpacing
    &__label
      unicode-bidi plaintext
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
    & > a
      overflow hidden
      &:hover
        text-decoration underline
    & i
      margin-inline-end textSpacing
    &.root
      white-space nowrap

@media (max-width: max-md)
  .breadcrumbs__item
    &.root
      & > .breadcrumbs__item__text
        display none
      & i
        margin 0

@media (max-width: max-xs)
  .breadcrumbs
    position static
    &__item
      flex-shrink 1
