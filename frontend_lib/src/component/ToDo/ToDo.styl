@import "../../css/Variable.styl"

.toDo
  display flex
  flex-direction column
  margin standardSpacing

  &__new
    display flex
    flex-direction column
    margin-bottom standardSpacing
    margin-top standardSpacing

    &__toDoText
      display flex
      flex-direction column
      margin-top standardSpacing

      & > textarea
        border borderStyle
        border-radius standardBorderRadius
        padding textSpacing

    &Button
      align-self flex-end
      margin-bottom standardSpacing
  &Item
    display flex
    background-color offWhite
    min-height headerHeight
    justify-content flex-start
    align-content center
    align-items center
    border-bottom 1px solid mediumGrey
    padding standardSpacing
    &:last-child
      border none
    &__checkbox
      font-size titleFontSize
      &:focus
        outline none
    &__delete:focus
      outline none
    &__content
      flex 1
      align-items baseline
      overflow hidden
      text-overflow ellipsis
      & strong
        margin-right textSpacing
    &Checked
      color lightDarkGrey
      & > button
        color lightDarkGrey
