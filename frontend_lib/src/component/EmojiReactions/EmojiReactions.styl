@import "../../css/Variable.styl"

.EmojiPickerPopover .popover
  max-width unset

.EmojiReactions
  display flex
  align-items center
  justify-content flex-end
  flex 1

.EmojiReactionButton__button, .EmojiReactionButton__buttonpicker
  background transparent
  cursor pointer
  border-radius 3px
  margin 2px

.EmojiReactionButton__button
  border-width 1px
  border-style solid
  &:not(.highlighted)
    border-color mediumGrey
  &:hover
    border 1px solid lightDarkGrey

  &__value
    font-family 'Segoe UI Emoji', 'Segoe UI Symbol', 'Segoe UI', 'Apple Color Emoji', 'Twemoji Mozilla', 'Noto Color Emoji', 'Android Emoji', sans-serif
  &__count
    padding-inline-start 4px
    display inline-block
    text-align right
    min-width 2ex // INFO - RJ - 2021-03-17 - prevent the button from resizing when the count changes

.EmojiReactionButton__buttonpicker
  border 1px solid transparent
  &.active
    background-color mediumDarkGrey
    border 1px solid mediumDarkGrey

.EmojiReactionButton__button:hover:not(.highlighted), .EmojiReactionButton__buttonpicker:hover:not(.active)
  background-color grey-hover
  border 1px solid mediumGrey

.emoji-mart button, .emoji-mart-category button.emoji-mart-emoji span
  // INFO - RJ - 2021-03-18 - This class is intentionally specific to overwrite emoji-mart's own CSS rule
  cursor pointer
