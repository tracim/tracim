@import "../../css/Variable.styl"

.shareDownload
  display flex
  flex-direction column
  width 100%
  height 100%
  min-height 260px
  &__new
    padding 10px
  &__management
    &__header
      display flex
      justify-content space-between
      padding 10px
  &__title
    border-bottom 2px solid lightGrey
    margin 10px 15px
    font-size 20px
  &__email
    padding 5px 0px
    display flex
    &__icon
      background-color transparent
      border none
      cursor pointer
      margin auto
      &:focus
        box-shadow 0 0 0 0
        border 0 none
        outline 0
    &__input
      resize none
  &__password
    padding 5px 0px
    display flex
    &__wrapper
      display flex
      flex-grow 2
      border-width 1px
      border-style solid
      border-radius .25rem
      border-color lightgray
      background-color white
      padding-left 5px
      & > i
        margin auto
    &__input
      border none
      padding-left 0
    &__icon
      background-color transparent
      border none
      cursor pointer
      &:focus
        border 0 none
        outline 0

@media (min-width: min-xs) and (max-width: max-lg)
  .shareDownload
    margin-top 0px
