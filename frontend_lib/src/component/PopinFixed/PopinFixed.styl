@import '../../css/Variable.styl'

.wsContentGeneric
  position fixed
  top headerHeight
  right 0
  width 100%
  height "calc(100% - %s)" % headerHeight
  background-color lightGrey
  z-index 9
  &.sidebarVisible
    max-width "calc(100% - %s)" % sidebarWidth
  &.visible
    visibility visible
  &__header
    display flex
    align-items center
    margin 5px standardSpacing 5px 30px
    height 60px
    border-bottom 1px solid mediumGrey
    & > *
      margin-right 5px
    &__actions
      &::after
        display none
    &__icon
      margin-right standardSpacing
      font-size titleFontSize
    &__title
      margin-right standardSpacing
      border-radius 5px
      flex 2
      text-overflow ellipsis
      overflow hidden
      white-space nowrap
      font-size titleFontSize
      font-weight bold
      & > div
        text-overflow ellipsis
        overflow hidden
      & > input
        padding-left 5px
    &__reactions
      flex 1
      height 100%
      & > .EmojiReactions
        flex-wrap wrap-reverse
    &__close
      border-radius 5px
      padding 3px 7px
      & > i
        font-size titleFontSize
        vertical-align middle
  &__option
    &__menu
      & > div
        display flex
        flex-flow row
        justify-content space-between
        align-items center
        height 100%
      &__addversion
        display flex
        align-items center
        cursor pointer
      &__lastversion
        display flex
        align-items center
        margin-left 15px
        border-width 1px
        border-style solid
        & > i
          margin-right standardSpacing
          color darkGrey
          font-size titleFontSize
      &__action
        font-size titleFontSize
        background-color transparent
        border none
        cursor pointer
        &:hover , &:focus
          color blue
  &__content
    display flex
    flex-wrap wrap
    width 200% // to allow transform translateX of right part
    height 100%
    &__state
      width 100%
      padding 5px 15px
      border-radius 10px
      background-color #fbe294
    &__left
      transition width 0.4s ease
      width 30%
      height 100%
      &__top
        display flex
        align-items center
        color lightDarkGrey
        font-size metadataFontSize
        padding 5px standardSpacing
        margin-inline-start 20px
        & .breadcrumbs
          margin-inline-end auto
          overflow auto
        &__version
          margin-left auto
          display flex
        &__lastversion
          margin-left 15px
          font-weight bold
    &__right
      display flex
      transition width 0.4s ease
      width 20%
      height 100%
      &__content
        width calc(100% - 65px) // 65px is the width of the rightPart header
        overflow-y auto
        &__title
          margin standardSpacing 15px
          padding standardSpacing
          font-size titleFontSize
      &__header
        display flex
        flex-direction column
        width 65px
        background-color mediumGrey
        font-size titleFontSize
        cursor pointer
        &__icon
          cursor pointer
          border none
          height 65px
          background-color mediumGrey
          border-left 5px solid transparent
          &:focus
            border-color transparent
            outline 0
          &.active
            background-color lightGrey
          &__close
            text-align center
            cursor pointer
            margin auto 0 15px

.rightPartClose
  .wsContentGeneric__content
    &__left
      width calc(50% - 65px) // 65px is the width of the rightPart header
    &__right__header__icon.active
      background-color mediumGrey
      border none

responsiveColumnStyle()
  .wsContentGeneric__content__right
    display flex
    flex-direction column
    margin 0
    &__header
      flex-direction row
      width 100%
      height 65px
      justify-content flex-end
      &__icon
        transform none
        border-left-width 0
        margin-left 5px
        padding standardSpacing
        width 65px
        border-top 5px solid
        & > i
          margin auto
        &__close
          display none
    &__content
      width 100%
  .rightPartClose
    .wsContentGeneric__content__right__header__icon.active
      border-top 5px solid

@media (max-width: max-lg)
  .rightPartClose
    .wsContentGeneric__content__left
      width 100%

@media (min-width: min-lg) and (max-width: max-lg)
  .wsContentGeneric
    &__content
      overflow-Y auto
      width 100%
      &__left
        width 100%
        height auto
      &__right
        width 100%
        height auto
  responsiveColumnStyle()

@media (min-width: min-md) and (max-width: max-md)
  .headerBtn
    & span
      display none
  .wsContentGeneric
    &__content
      overflow-Y auto
      width 100%
      &__left
        width 100%
        height auto
        &__textnote
          height auto
          overflow-y hidden
      &__right
        width 100%
        height auto
  responsiveColumnStyle()

@media (min-width: min-sm) and (max-width: max-sm)
  .headerBtn
    & span
      display none
  .wsContentGeneric
    width 100%
    max-width 100%
    top headerHeight
    &__content
      overflow-Y auto
      width 100%
      &__left
        width 100%
        height auto
        &__textnote
          height auto
          overflow-y hidden
      &__right
        width 100%
        height auto
  responsiveColumnStyle()

@media (max-width: max-xs)
  .headerBtn
    & span
      display none
  .wsContentGeneric
    width 100%
    max-width 100%
    top headerHeight
    &.sidebarVisible
      max-width 100%
    &__option
      display none
    &__content
      overflow-Y auto
      width 100%
      &__left
        width 100%
        height auto
        &__textnote
          height auto
          overflow-y hidden
      &__right
        width 100%
        height auto
  responsiveColumnStyle()
