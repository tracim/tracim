@import '../../css/Variable.styl'

.tagList__form
  padding 15px
  flex-direction column
  height 100%
  width 100%
  &__title
    font-size fontSizeMedium
    margin-bottom 25px
  &__tag
    height 45px
    display flex
    flex-flow column nowrap
    .name__input
      margin 0 0 0 0
      box-sizing border-box
      width 100%
      flex none
    .autocomplete
      z-index 1
      &__item
        padding 5px
  &__submitBtn
    display flex
    justify-content flex-end
