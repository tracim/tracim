@import '../../css/Variable.styl'

.linkPreview
  position relative
  display block
  padding 10px
  margin-top 10px
  border 1px solid mediumGrey
  background veryLightGrey
  color inherit
  text-decoration none
  &__img
    margin-left 10px
    border 1px solid mediumGrey
    float right
    max-width 33%

  &__content
    &__link
      color blue
    &__description
      margin-top 5px
  &:hover
    text-decoration none
    color inherit

    .linkPreview__content__link
      text-decoration underline
