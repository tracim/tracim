@import "../../css/Variable.styl"

.filecontent
  &__form
    width 100%
    border 1px dashed grey
    padding standardSpacing 15px
    margin-bottom standardSpacing
    cursor pointer
    &__icon
      margin-top 15px
      font-size bigIconSize
      & > label
        cursor pointer
    &__instruction
      font-size standardFontSize
    &__text
      margin-bottom 20px
      font-size metadataFontSize
  &__preview
    text-align center
    & > img
      max-width 340px
      max-height 192px
    &__nopreview
      &-icon
        font-size bigIconSize
      &-msg
        margin-top standardSpacing
        word-break break-word
