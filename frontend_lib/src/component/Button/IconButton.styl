@import '../../css/Variable.styl'

.iconbutton
  padding standardSpacing
  cursor pointer
  border-radius standardBorderRadius
  border-width 0px
  height auto
  white-space pre

  &:disabled
    opacity 0.65
    cursor not-allowed

  &-dark
    color fontColor
  &-light
    color offWhite

  &__text-with-icon
    padding-left 5px
    white-space pre

  &__icon
    margin-inline-end 5px

  &__label
    display inline
    &-mobile
      margin-inline-start textSpacing
      display none

  // Intents styling
  &-primary
    background-color var(--primaryColor)
    &:hover
      background-color var(--primaryDarkColor)

  &-secondary
    background-color transparent
    border-width 1px
    &:hover
      background-color rgba(0, 0, 0, 0.1)
    &-light
      border-color offWhite
    &-dark
      border-color var(--primaryDarkColor)

  &-link
    background-color transparent
    border none
    padding 0
    &:hover
      text-decoration underline
    &-light
      color lightDarkGrey
      &:hover
        color darkGrey
    &-dark
      color fontColor
      &:hover
        color black

  &-pins
    padding 0
    border-radius 50% 50%
    border-width 1px
    &-light
      border-color offWhite
      background-color var(--primaryColor)
      &:hover
        background-color var(--primaryDarkColor)
    &-dark
      border-color var(--primaryDarkColor)
      background-color offWhite
      &:hover
        background-color lightGrey

@media (min-width: min-xs) && (max-width: max-xs)
  .iconbutton
    &__label
      display none
      &-mobile
        display inline
