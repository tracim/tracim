@import '../../css/Variable.styl'

.refreshWarningMessage
  color darkGrey
  padding 5px 10px
  background-color lightyellow
  border 1px solid warningOrange
  border-radius 5px
  margin-right 5px
  display flex
  cursor pointer
  .fa
    margin auto
    color warningOrange
  &__text
    margin-left 5px
    font-weight bold

// MEDIA QUERIES
@media (max-width: max-lg)
  .refreshWarningMessage
    .fa
      padding 5px
    &__text
      display none
