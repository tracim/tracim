@import '../../css/Variable.styl'

.textInputComponent
  position relative
  display flex
  border-radius standardBorderRadius
  padding textSpacing
  background-color offWhite
  &:focus-within
    border 1px solid lightBlue
  &__icon
    color grey
    margin-top auto
    margin-bottom auto
    top 0
    bottom 0
    right standardSpacing
    height 1em
  &__text
    border none
    flex 1
    font-size standardFontSize
    &:focus
      box-shadow 0 0 0 0
      border 0 none
      outline 0
