@import '../../../css/Variable.styl'

.editiontitle
  width 100%

.editionmode
  display flex
  flex-direction column
  align-items center
  width 100%
  height calc(100% - 67px) // 67px => buttons size with margin
  &__text
    margin-bottom 25px
    width 100%
    height calc(100% - 67px) // 67px => buttons size with margin
  &__button
    margin-top 25px
    width 100%
    text-align right
    &__cancel
      cursor pointer
    &__submit
      cursor pointer

.mce-tinymce, .mce-container-body
  min-height 100%
///*Editing area*/
.mce-container-body .mce-edit-area
  position absolute
  top 69px
  bottom 37px
  left 0
  right 0
///*Footer*/
.mce-tinymce .mce-statusbar
  position absolute
  bottom 0
  left 0
  right 0
