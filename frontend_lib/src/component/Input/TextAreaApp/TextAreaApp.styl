@import '../../../css/Variable.styl'

.editiontitle
  width 100%

.editionmode
  display flex
  flex-direction column
  align-items center
  width 100%
  height calc(100% - 67px) // 67px => buttons size with margin
  &__text
    margin-bottom standardFontSize
    width 100%
    height calc(100% - 67px) // 67px => buttons size with margin
  &__button
    margin-top standardFontSize
    width 100%
    text-align right
    &__cancel
      cursor pointer
      margin-inline-end standardFontSize
    &__submit
      cursor pointer
