@import '../../css/Variable.styl'

.shareLink
  display flex
  height listItemHeight
  background-color offWhite
  border-radius standardBorderRadius
  margin-top spacingBetweenListItem
  &__icon
    font-size bigIconSize
    margin auto standardSpacing
    color grey
    &__unprotected
      margin-inline-end standardSpacing
  &__linkInfos
    margin auto 0
    flex 1
    text-overflow ellipsis
    white-space nowrap
    overflow hidden
    &__email
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
    &__link
      font-size metadataFontSize
      color grey
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
