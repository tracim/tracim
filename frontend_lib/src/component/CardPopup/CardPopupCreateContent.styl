@import '../../css/Variable.styl'

.popupCreateContentOverlay
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  z-index zIndexOverHeader
  background-color rgba(240, 240, 240, 0.2)
.popupCreateContent
  position fixed
  left 0
  display flex
  justify-content center
  width 100%
  .cardPopup__container
    border 0
    border-radius standardBorderRadius
    width popupWidth
    background lightGrey
    box-shadow shadow-all
  .createcontent
    width 100%
    &__form
      &__input
        width 100%
        border borderStyle
        border-radius standardBorderRadius
        margin-bottom standardSpacing
        padding textSpacing
      &__button
        display flex
        justify-content flex-end
        &:disabled
          cursor not-allowed
