@import '../../css/Variable.styl'

.cardPopup
  position fixed
  top calc(50% - 113px)
  left 0
  display flex
  justify-content center
  width 100%
  z-index 20
  &__container
    border 0
    border-radius 10px
    width 800px
    background lightGrey
    box-shadow shadow-all
  &__header
    border-top-right-radius 10px
    border-top-left-radius 10px
    width 100%
    height 8px
  &__close
    display flex
    justify-content flex-end
    padding 5px 15px 5px 5px
  &__body
    display flex
    align-items center
    padding standardSpacing 15px 15px 15px
    &__icon
      padding 0 30px
      font-size bigIconSize
    &__text
      &__title
        font-size titleFontSize
        font-weight 600
      &__message
        padding-right 20px
        font-weight 500
