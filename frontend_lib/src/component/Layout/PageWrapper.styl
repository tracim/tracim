.pageWrapperGeneric
  &__header
    display flex
  &__content
    margin 10px 10px 120px 10px

.pageTitleGeneric
  position relative
  margin 30px 0 20px 0
  padding 0 30px
  width 100%
  &__title
    display flex
    align-items center
    font-size 30px
    &__icon > i
      margin-right 15px
  &__subtitle
    margin-top 15px

.pageContentGeneric
  padding 10px 30px 20px 30px
  width 100%
  height 100%

@media (min-width: min-md) and (max-width: max-md)
  .pageWrapperGeneric
    display block
    &__header
      margin 95px 0 5px 30px
    &__content
      margin 0

@media (min-width: min-sm) and (max-width: max-sm)
  .pageWrapperGeneric
    display block
    &__header
      margin 95px 0 35px 0
      &__title
        display inline-block
        margin-left 0
    &__content
      margin 0
  .pageTitleGeneric
    display block
    margin 25px 0
    &__title
      font-size 26px

@media (max-width: max-xs)
  .pageWrapperGeneric
    display block
    &__header
      display block
      margin-top 60px
    &__content
      margin 0
  .pageTitleGeneric
    display block
    margin 20px 0
    &__title
      font-size 26px

#appFullscreenContainer > div[data-radium="true"] > .pageWrapperGeneric
  width auto
  height auto
  overflow-y auto
