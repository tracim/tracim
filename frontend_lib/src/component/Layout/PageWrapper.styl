@import "../../css/Variable.styl"

.pageWrapperGeneric
  &__header
    display flex
  &__content
    margin standardSpacing standardSpacing 120px standardSpacing

.pageTitleGeneric
  position relative
  padding 5px 45px
  width 100%
  background-color offWhite
  border-bottom 1px solid grey
  &__title
    display flex
    align-items center
    font-size fontSizeTitle
    &__icon > i
      margin-right 15px
    &__label
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
  &__subtitle
    margin-top 15px

.pageContentGeneric
  padding 10px 30px 20px 30px
  width 100%
  height 100%

@media (min-width: min-md) and (max-width: max-md)
  .pageWrapperGeneric
    display block
    &__header
      margin 95px 0 5px 30px
    &__content
      margin 0

@media (min-width: min-sm) and (max-width: max-sm)
  .pageWrapperGeneric
    display block
    &__header
      margin 95px 0 35px 0
      &__title
        display inline-block
        margin-left 0
    &__content
      margin 0

@media (max-width: max-xs)
  .pageWrapperGeneric
    display block
    &__header
      display block
      margin-top 60px
    &__content
      margin 0

#appFullscreenContainer > div[data-radium="true"] > .pageWrapperGeneric
  width auto
  height auto
  overflow-y auto
