@import "../../css/Variable.styl"

.userInfo
  display flex
  align-items center
  flex 1
  &__name
    margin-inline-start standardSpacing
    width calc(100% - 50px)
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
    display flex
    flex-direction column
    align-items start
  &__username
    font-size metadataFontSize
    color mediumDarkGrey
    text-overflow ellipsis
    overflow hidden
    direction ltr
