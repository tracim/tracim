@import '../../css/Variable.styl'

.timeline
  display flex
  flex-direction column
  height "calc(100% - %s)" % headerHeight
  & p:first-child
    margin-top 0
    padding-top 0
  & p:last-child
    margin-bottom 0
    padding-bottom 0
  &__messagelist
    flex 1 1 auto
    margin-bottom 0
    padding standardSpacing standardSpacing 0
    overflow-y auto
    overflow-x visible
    &__item
      position relative
      margin standardSpacing 0
      width 100%
      & + .revision
        border none
      &:last-child
        margin-bottom 0
  &__warning
      position absolute
      width calc(100% - 20px)
      padding-left 5px
      z-index 1
  &__texteditor
    position relative
    flex 0 1 auto
    margin standardSpacing
    &__mentions
      font-weight bold
      margin standardSpacing 0
    &__autocomplete
      position absolute
      width 100%
      background-color offWhite
      font-size metadataFontSize
      border-radius standardBorderRadius
      &__delimiter
        height 2px
        margin 5px 20px
        background-color grey
      &__item
        padding 1px standardSpacing
        cursor pointer
        &__active
          background-color grey-hover
    &__textinput
      width 100%
      min-height 80px
      & > textarea
        border-radius standardBorderRadius
        border borderStyle
        padding textSpacing
        height 80px
        width 100%
    &__wrapper
      display flex
      align-items flex-start
      justify-content flex-end
      margin-top textSpacing
      height 42px
    &__advancedtext
      width 100%
      &__btn
        width max-content
        font-size metadataFontSize
        &:disabled
          cursor not-allowed
          &:hover
            color mediumDarkGrey
    &__submit
      display flex
      align-items center

.mce-btn-group:not(:first-child)
  border-left none!important //remove the left borders of the wysiwyg for a better aesthetic result

// INFO - CH - 2020-05-12 - this overrides the "height: auto" of tinymce to fix responsive issue https://github.com/tracim/tracim/issues/3026
.mce-container:not(.mce-fullscreen) .mce-edit-area
  height 100px

// MEDIAQUERIES

columnTimeline()
  .timeline
    display flex
    flex-direction column
    margin 0
    height calc(100% - 65px) // 65px is the width of the rightPart header
    width 100%
    &__header
      flex-direction row
      width 100%
      height 50px
      cursor auto
      &__icon
        display none
      &__title
        display flex
        justify-content center
        align-items center
        transform none
        width 100%

@media (min-width: min-lg) and (max-width: max-lg)
  columnTimeline()

@media (min-width: min-md) and (max-width: max-md)
  columnTimeline()

@media (min-width: min-sm) and (max-width: max-sm)
  columnTimeline()

@media (max-width: max-xs)
  columnTimeline()
  .timeline
    height 100%
    &__messagelist
      &__version__date
        font-size metadataFontSize
    &__texteditor__advancedtext__btn
      display none
