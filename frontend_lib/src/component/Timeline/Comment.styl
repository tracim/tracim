@import '../../css/Variable.styl'

.comment
  border-radius 5px
  padding standardSpacing
  border 1px solid grey
  background-color offWhite
  display flex
  flex-direction column

  &.sent
    margin-left 5%
  &.received
    margin-right 5%
  &__body
    display flex
    flex-direction row

    .avatar-wrapper
      margin-inline-end standardSpacing

    &__content
      flex 1
      &__text
        img
          max-width 100%
          height auto
          box-shadow 0px 0px 10px mediumDarkGrey
        & a:not(.linkPreview)
          color bootstrapLinkColor
          &:hover
            color bootstrapLinkColor
            text-decoration underline
      &__textAndPreview
        flex 1

      &__header
        display flex
        flex-direction row
        margin-bottom standardSpacing
        font-size 12px
        &__meta
          flex 1
          &__author
            overflow-wrap anywhere
            font-size fontStandard
            &:hover
              text-decoration underline
        &__actions
          padding 0
          color grey
          &::after
            display none
          &:hover
            color fontColor
  &__footer
    display flex
    margin-top standardSpacing
    justify-content space-between
