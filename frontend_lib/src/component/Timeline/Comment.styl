@import '../../css/Variable.styl'
linkColor = #007bff // This color comes from bootstrap

.comment
  border-radius 5px
  padding 10px
  border 1px solid grey
  background-color offWhite
  display flex
  flex-direction column

  &.sent
    margin-left 5%
  &.received
    margin-right 5%
  &__body
    display flex
    flex-direction row

    .avatar-wrapper
      margin-inline-end 10px

    &__content
      flex 1
      &__text
        img
          max-width 100%
          height auto
          box-shadow 0px 0px 10px mediumDarkGrey
        & a:not(.linkPreview)
          color linkColor
          &:hover
            color linkColor
            text-decoration underline
      &__textAndPreview
        flex 1

      &__header
        display flex
        flex-direction row
        margin-bottom 10px
        font-size 12px
        &__meta
          flex 1
          &__author
            overflow-wrap anywhere
            font-size 16px
            &:hover
              text-decoration underline
        &__actions
          padding 0
          color grey
          &::after
            display none
          &:hover
            color fontColor
  &__footer
    display flex
    margin-top 10px
    justify-content space-between

