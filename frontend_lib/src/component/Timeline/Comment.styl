@import '../../css/Variable.styl'

.comment
  &.sent
    padding-left 5%
    margin-left auto
  &.received
    padding-right 5%
    margin-right auto
  &__body
    border-radius 5px
    padding 10px
    border 1px solid grey
    flex-direction column
    background-color offWhite
    display flex
    &__content
      display flex
      .avatar-wrapper
        margin-right 10px
      &__textAndPreview
        flex 1
      &__actions
        padding 0
        color grey
        &::after
          display none
        &:hover
          color fontColor
    &__header
      display flex
      flex-direction row
      margin-bottom 10px
      font-size 12px
      &__meta
        flex 1
        &__author
          overflow-wrap anywhere
    img
      max-width 100%
      height auto
      box-shadow 0px 0px 10px mediumDarkGrey
  &__footer
    display flex
    margin-top 10px
    justify-content space-between
