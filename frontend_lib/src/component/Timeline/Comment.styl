@import '../../css/Variable.styl'

.comment
  &.sent
    padding-left 5%
    margin-left auto
    width calc(100% - 50px)
    & ^[0]__body a // renders .comment.sent .comment__body a
      text-decoration underline
      color #fff
      &:hover
        font-weight bold
  &.received
    padding-right 5%
    margin-right auto
    width calc(100% - 50px)
    & ^[0]__body a // renders .comment.received .comment__body a
      text-decoration underline
      color inherit
      &:hover
        font-weight bold
  &__body
    border-radius 5px
    padding 15px 15px 15px 20px
    border 1px solid darkGrey
    background-color offWhite
    display flex
    &__author
      margin-left 20px
    &__date
      margin-left 20px
      font-size 12px
    &__text
      margin-left 20px
      margin-top 10px
  p
    margin 0
    & img
      max-width 100%
      height auto

