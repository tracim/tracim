@import '../../css/Variable.styl'

textarea
  unicode-bidi plaintext

.textarea
  &__autocomplete
    position absolute
    width 100%
    transform translateY(-100%)
    top 0
    padding 3px 0
    background-color offWhite
    border-radius standardBorderRadius
    box-shadow shadow-all
    font-size metadataFontSize
    &__delimiter
      height 2px
      margin 5px 20px
      background-color grey
    &__item
      display flex
      flex-direction row
      padding 1px standardSpacing
      cursor pointer
      &__active
        background-color lightGrey1

.commentArea
    &__mentions
      font-weight bold
      margin standardSpacing 0
    &__autocomplete
      position absolute
      width 100%
      background-color offWhite
      font-size metadataFontSize
      border-radius standardBorderRadius
      &__delimiter
        height 2px
        margin textSpacing standardSpacing
        background-color grey
      &__item
        padding 1px standardSpacing
        cursor pointer
        &__active
          background-color lightGrey1
    &__textinput
      position relative
      width 100%
      min-height 80px
      // NOTE - GB - 2022-04-12 - TinyMCE' UI without the content is 96px
      // TinyMCE 5 is not high enough so we fixed 80px for text edition area
      & .tox-edit-area
        min-height 80px
      & > textarea
        border-radius standardBorderRadius
        border none
        padding textSpacing
        height 80px
        width 100%
        &:disabled
          border borderStyle
    &__wrapper
      display flex
      align-items flex-start
      justify-content flex-end
      margin-top standardSpacing
      height 42px
    &__advancedtext
      width 100%
      &__btn
        width max-content
        font-size metadataFontSize
        &:disabled
          cursor not-allowed
          &:hover
            color darkGrey1
    &__submit
      display flex
      align-items center
      &__btn
        margin-inline-start textSpacing
    &__withstand
      &__btn
        margin-inline-start textSpacing
